{
    "name": "boilerplate",
    "version": "0.0.1",
    "main": "src/index.ts",
    "author": "hvu",
    "license": "MIT",
    "private": true,
    "scripts": {
        "clean": "rimraf dist",
        "prebuild": "yarn clean",
        "build": "cross-env NODE_ENV=production webpack",
        "dev": "cross-env NODE_ENV=development webpack-dev-server --open",
        "dev:hot": "yarn run dev --hot",
        "format": "pretty-quick",
        "type-check": "tsc",
        "type-check:watch": "yarn run type-check --watch",
        "lint": "tslint './src/**/*.ts*'",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "yarn test -o --watch",
        "coverage": "jest --coverage",
        "build-server": "tsc --project ./src/server/tsconfig.json --outDir ./dist/server/",
        "preserve": "yarn run build-server",
        "serve": "node ./dist/server/index.js"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.2.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.2.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.1.0",
        "@svgr/webpack": "^4.1.0",
        "@types/graphql": "^14.0.4",
        "@types/jest": "^23.3.12",
        "@types/koa": "^2.0.48",
        "@types/koa-router": "^7.0.37",
        "@types/node": "^10.12.18",
        "@types/node-fetch": "^2.1.4",
        "@types/react": "^16.7.18",
        "@types/react-dom": "^16.0.11",
        "@types/react-router-dom": "^4.3.1",
        "babel-jest": "24.0.0-alpha.12",
        "babel-loader": "^8.0.5",
        "cache-loader": "^2.0.1",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.0",
        "fork-ts-checker-webpack-plugin": "^0.5.2",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "jest": "24.0.0-alpha.12",
        "jest-dom": "^3.0.0",
        "linaria": "^1.0.0-beta.9",
        "mini-css-extract-plugin": "^0.5.0",
        "nodemon": "^1.18.9",
        "postcss-loader": "^3.0.0",
        "postcss-normalize": "^7.0.1",
        "postcss-preset-env": "^6.5.0",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "react-axe": "^3.0.2",
        "react-dev-utils": "^7.0.1",
        "react-hot-loader": "^4.6.3",
        "react-testing-library": "^5.4.4",
        "rimraf": "^2.6.3",
        "stylelint": "^9.9.0",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-standard": "^18.2.0",
        "terser-webpack-plugin": "^1.2.1",
        "thread-loader": "^2.1.1",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.2",
        "webpack": "^4.28.4",
        "webpack-bundle-analyzer": "^3.0.3",
        "webpack-cli": "^3.2.1",
        "webpack-dev-server": "^3.1.14",
        "webpack-merge": "^4.2.1"
    },
    "dependencies": {
        "@koa/cors": "^2.2.3",
        "apollo-server-koa": "^2.3.1",
        "graphql": "^14.0.2",
        "koa": "^2.6.2",
        "koa-router": "^7.4.0",
        "linaria-jest": "^0.0.4",
        "node-fetch": "^2.3.0",
        "polished": "^2.3.3",
        "react": "^16.7.0-alpha.2",
        "react-dom": "^16.7.0-alpha.2",
        "react-router-dom": "4.3.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run format --staged && yarn run type-check && yarn run lint"
        }
    },
    "browserslist": [
        ">1%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
